    <div class="container px-lg-5">
        <a class="navbar-brand" href="/">hmsweethm</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="/submitHousingPost">Submit Housing</a> </li>
                <li class="nav-item"><a class="nav-link" href="/submitTopic">Submit Topic</a></li>
                <li class="nav-item"><a class="nav-link" href="/housingPostFeed">Housing</a></li>
                <li class="nav-item"><a class="nav-link" href="/topicFeed">Topic</a></li>
                <li class="nav-item"><a class="nav-link" href="/save" >Saved</a></li>
                <li class="nav-item"><a class="nav-link" href="/profile" >Profile</a></li>
                <li class="nav-item"><a class="nav-link" href="/map" >Map</a></li>
                <li class="nav-item"><a class="nav-link" href="/logout" >Logout</a></li>
                <li class="nav-item"><a class="nav-link" href="/login" >Login</a></li>
            </ul>
            </ul>
        </div>
    </div>
</nav>
<section class='title bg-dark'>
    
    <h2><%= topic.title %></h2>
    <% var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }; %>
    <p> date posted:</p>
    <p><%= topic.datePostedBy.toLocaleDateString("en-US", options) %></p>
</section>

<div class='container userStatus infoSec'>
  <div class="row cssForRow">
    <div class="col cssForCol whoPosted">  
      <label> posted by</label>  
      <section class="renderedInfo">
          
          <a href="/otherUserProfile/<%= topic.userId %>"><h4> <%= topic.userName%></h4></a> 
      </section>
      
    </div>
    <div class="col cssForCol location">
        <label> city </label>
        <section class="renderedInfo">
          <h4><%= topic.city %></h4>
        </section>
    </div>
  </div>
  <div class="row  cssForRow">
    <div class="col cssForCol location">
        <label> zipcode </label>
        <section class="renderedInfo">
          <h5> <%= topic.zipcode %></h5>
        </section>
    </div>
      <div class="col cssForCol location">
        <label> neighborhood </label>
        <section class="renderedInfo">
          <h5> <%= topic.neighborhood %></h5>
        </section>
    </div>
  </div>
  <div class="infoBlock">
        <label>a little about the posting:</label>
        <section class="renderedInfo">
            <h5><%= topic.aboutPosting %></h5>
        </section>
    </div>
  <div class="row cssForRow">
    <div class="col cssForCol commentSec">
      <label> comment </label>
      <section class="renderedInfo">
        <% for (let i = 0; i < comments.length; i++) {%>
        <div class="individualComment">
          <h4><%= comments[i].comment %></h4>
          <p><a href="/otherUserProfile/<%= comments[i].postedById %>"> <%= comments[i].postedBy %> </a></p>
        </div>
        <% } %>
      </section>
    </div>
  
    <div class="col cssForCol commentSubm">
      <label for="">comment</label>
      <% if (user.local.email) { %>
      <form action="/makeCommentTopic/<%= topic._id %>" method="POST">
          <!-- <input type="text" name="user" placeholder="user"> -->
          <input type="text" name="comment" placeholder="comment">
          <button class="btn" type="submit">Submit</button>
      </form>
      <% } %>
    </div>
  </div>

    

    
   
    <!-- <h5> <%# topic.thumbUp %></h5> -->

