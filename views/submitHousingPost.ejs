      <a href="/logout" >Logout</a>
      <a href="/save" >savedPage</a>
      <a href="/login" >Login</a>
    </nav>

    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">
        <h2><span class="fa fa-sign-in"></span> got some housing for us?</h2>

        <%# if (user.local.email) { %>
       
        <%# } %>

        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>


        <!-- LOGIN FORM -->
          <form action="/submitHousingPost" enctype="multipart/form-data" method="post">
            <div class="form-group">
              <label>UserName</label>
              <input type="text" class="form-control" name='userName' value="<%= user.userName%>" />
              <input type="hidden" value="<%= user._id %>" name="userId">
            </div>
            <div class="form-group">
              <label>zipcode</label>
              <select name="zipcode" id="zipcode" size="4">
                <option selected disabled>neighborhood</option>
                <!-- use this same block of code on the feeds and the sign in and topic page -->
            <% for(let i = 0; i < zipcodes.length; i++) {%>
                <option value="<%= zipcodes[i] %>"><%= zipcodes[i] %></option>
            <% }%>  
            </div>
            <div class="form-group">
              <label>city</label>
              <input type="text" class="form-control" name="city" />
            </div>
            <div class="form-group">
              <label for="neighborhood">Neighborhood</label>
            
              <select name="neighborhood" id="neighborhood" size="4">
                <option selected disabled>neighborhood</option>
                <!-- use this same block of code on the feeds and the sign in and topic page -->
            <% for(let i = 0; i < neighborhoods.length; i++) {%>
                <option value="<%= neighborhoods[i] %>"><%= neighborhoods[i] %></option>
            <% }%>  
            </select>
          
            </div>
            <div class="form-group">
              <label for="housingType">Choose a housingType:</label>

              <select name="housingType" id="housingType">
                <option value="longterm">longterm (1yr+)</option>
                <option value="short Term">short term (6mos-1yr)</option>
                <option value="temporary">temporary</option>
              </select>
            </div>
            <div class="form-group">
              <label>Title</label>
              <input type="text" class="form-control" name="title" />
            </div>
            <div class="form-group">
              <label>a little about your posting?</label>
              <input type="text" class="form-control" name="aboutPosting" />
            </div>
            <div class="form-group">
              <label>pictures</label>
              <input type="file" name="file-to-upload" class="fileChose">
            </div>
            <div class="form-group">
              <label>date Posted By</label>
              <input type="date" class="form-control" name="datePostedBy" />
            </div>

            <button type="submit" class="btn btn-warning btn-lg">send</button>
          </form>
          
          <button><a href="/profile">profile</a></button>
          <button><a href="/submitTopic">submit a topic</a></button>
          <hr />

          <p>Need an account? <a href="/signup">Signup</a></p>
          <p>Or go <a href="/">home</a>.</p>
        </div>
      </div>
    </div>

