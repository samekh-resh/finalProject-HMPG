<!doctype html>
<html>
<head>
    <title>hmpg profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <nav>
    <h1>HOMEPAGE</h1>
    <a href="/submitHousingPost">submit housing</a> 
    <a href="/submitTopic">submit topic</a> 
    <a href="/profile">profile</a> 
    <a href="/housingPostFeed">housingFeed</a> 
    <a href="/topicFeed">topicFeed</a> 
    <a href="/logout" >Logout</a>
    <a href="/save" >savedPage</a>
    <a href="/login" >Login</a>
  </nav>
    <!-- chats will be changed to user posts and info like reach out if you need help with housing or whatever? -->

    


        <div class="profileBlock text-center">
           <div>
              <h2><span class="fa fa-id-badge"></span> Profile </h2>
          </div> 

              <% if (user.local.email) { %>
                <p>
                    <strong>name</strong>: <%= user.userName%><br>
                    <strong>email</strong>: <%= user.local.email %><br>
                   
                </p>

              <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
            <% } %>

        </div>


        <div class="userStatus">
          <h6>chats for the day!</h6>
          <%# for(var i=0; i<chatSubmitted.length; i++) {%>

            <table>
                <tr>
                  <th>userName</th>
                  <th>housing status</th>
                  <th>datePostedBy</th>
                </tr>
              <% if(chatSubmitted.userId) {%>
                <% console.log(chatSubmitted.userId) %>
                <% if (chatSubmitted.userId.equals(user._id)  ) {%> 
                <tr>
                  <td><%= chatSubmitted.userName %></td>
                  <td><%= chatSubmitted.housingStatus %></td>
                  <% let options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }; %>
                  <td><%= chatSubmitted.datePostedBy.toLocaleDateString("en-US", options) %></td>
                  <!-- <td><span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                    <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
                    <span><i class="fa fa-trash" aria-hidden="true"></i></span></td>-->
                </tr> 

                <% } %>
              
                  <!-- <p>you've added nothing</p> -->
              <% } else { %>

                <p>you've entered nothing</p>
                
                <% } %>
              </table>
    
        </div>

        <div class="submitStatus">
          <h6>submit your update</h6>
          <% if (user.local.email) { %>


          <form action="/chatSubmitted" method="post">
            <input type="hidden" value="<%= user._id %>" name="userId">
            <div class="nameProfile form-group">
              <label>name</label>
              <input type="text" class="form-control" value="<%= user.userName %>" name="userName" />
            </div>
            <div class="housingStatus form-group">
              <label for="housingType">looking for housing?</label>
  
              <select name="housingStatus" id="housingStatus">
                <option value="yes">yes</option>s
                <option value="no">no</option>
                <option value="temporary">temporary</option>
                <option value="short term">short term</option>
                <option value="longterm">longterm</option>
              </select>
            </div>
            <div class="datePosted form-group">
              <label>date Posted By</label>
              <input type="date" class="form-control" name="datePostedBy" />
            </div>
            
            <button type="submit">Submit</button>
          </form>
        
        <% } %>
        </div>

          <!-- so the profile section will have your saved housing posts, AND saved message board posts.  and other information to put in-->
    <script src="main.js"></script>

</body>
</html>
