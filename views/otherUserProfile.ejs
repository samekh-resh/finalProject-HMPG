  </nav>
    <!-- chats will be changed to user posts and info like reach out if you need help with housing or whatever? -->

    <div class="profileBlock text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>



        <div class="container userStatus">
          <h6>userStatus</h6>

                <%# if (chat.userId.equals(user._id)) {%> 
                
                
                <% if (chat && chat.userId) {%>
                <div class="row cssForRow">
                  <section class="col cssForCol">
                    <label for=""> </label>
                    <p><%= chat.userName %> </p>
                  </section>
                  <section class="col cssForCol">
                    <label for=""> </label>
                    <p><%= chat.housingStatus %> </p>
                  </section>
                  <section class="col cssForCol">
                    <% let options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }; %>
                    <label for=""> </label>
                    <p> <%= chat.datePostedBy.toLocaleDateString("en-US", options) %> 
                    </p>
                  </section>
                <% } else { %>
                  <p class="col cssForCol"> user has not placed a status, yet.</p>
                  <% } %>
                </div>
                    
                     
                     
                    

                

                
             
    

          <!-- so the profile section will have your saved housing posts, AND saved message board posts.  and other information to put in-->
